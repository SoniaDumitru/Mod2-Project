<div class="row columns">
    <h1>Our Handpicked Products</h1>
</div>
<div class="row small-up-2 medium-up-3 large-up-4">

  <% @products.each do |product| %>
    <!-- Card Element-->
    <div class="column">

        <% if product.in_stock? %>
        <a href="<%= product_path(product) %>">
        <% end %>
            <div class="card" style="min-height: 800px;">
                <img src="<%= product.picture_url %>">
                <div class="card-section">
                    <h4><%= product.name.titleize %></h4>
                    <p>
                        <%= product.description %>
                    </p>
                    <p class='text-right'>
                        <% if product.in_stock? %>
                        <strong>$<%= product.price %></strong>
                        <% else %>
                        <strong>Out of Stock</strong><br>
                        <del>$<%= product.price %></del>
                        <% end %>
                    </p>

                    <p class='rating-stars' style="color: gold;">
                    <% if product.rating == 5 %>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    <% elsif product.rating == 4 %>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    <% elsif product.rating == 3 %>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    <% elsif product.rating == 2 %>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    <% elsif product.rating == 1 %>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    <% elsif product.rating == 0 %>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    <% end %>
                    </p>
                </div>
            </div><!-- end .column card-->
        <% if product.in_stock? %>
        </a>
        <% end %>
    </div>
    <% end %>
</div>